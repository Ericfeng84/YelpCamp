<%include ../partials/header%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h1>YelpComp</h1>
            <ul class="list-group">
                <li class="list-group-item active">Cras justo odio</li>
                <li class="list-group-item">Dapibus ac facilisis in</li>
                <li class="list-group-item">Morbi leo risus</li>
                <li class="list-group-item">Porta ac consectetur ac</li>
                <li class="list-group-item">Vestibulum at eros</li>
            </ul>

        </div>

        <div class="col-md-9">

            <div class="card bg-light" id="showdetail">
                <img class="card-img-top" src="<%=detail.img%>" >
                <div class="card-body ">
                    <div class="card-title d-flex">
                        <h4 class=" "><%=detail.name%></h4>
                        <h4 class="ml-auto">10$</h4>
                    </div>
                    <p><%=detail.des%></p>
                    <p>
                        <em>Submit by <%=detail.author.username%></em>
                    </p>
                </div>
            </div>

            <p></p>

            <div class="card card-body bg-light">
                <p class="text-right">
                    <a href="/campgrounds/<%=detail._id%>/comments/new" class="btn btn-primary">Add Comment</a>
                </p>

                <hr>

                <% detail.comments.forEach(function (comment){ %>
                    <div class="row">
                        <div class="col-md-12 ">
                            <div class="d-flex">
                                <strong><%=comment.author.username%></strong>
                                <span class="ml-auto">10 days agp</span>
                            </div>
                                <p><%=comment.text%></p>
                        </div>
                    </div>
                    <%})%>
                </div>
            </div>

        </div>
    </div>
</div>


<%include ../partials/footer%>