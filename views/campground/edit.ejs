<%include ../partials/header%>
<div class="container">
    <div class="">
        <h1 style="text-align: center">Edit Campground: <%=detail.name%></h1>
        <div style="margin: 15px auto;width: 40%">
            <form action="\campgrounds\<%=detail._id%>\?_method=put" method="post" >
                <div class="form-group">
                    <label for="Campground Name">Campground Name</label>
                    <input type="text" class="form-control" name="campground[name]" value="<%=detail.name%>" id="Campground Name">
                </div>
                <div class="form-group">
                    <label for="Image Link">Imagine address</label>
                    <input type="text" class="form-control" name="campground[img]" value="<%=detail.img%>" id="Image Link">
                </div>
                <div class="form-group">
                    <label for="des">Description</label>
                    <input type="text" class="form-control" name="campground[des]" value="<%=detail.des%>" id="des">
                </div>
                 <input type="submit" class="btn btn-primary btn-block">
            </form>
            <a href="/">Back</a>
        </div>

    </div>
 </div>

<%include ../partials/footer%>

